alias "drop_flash" "slot7; drop"
alias "drop_smoke" "slot8; drop"
alias "drop_molotov" "slot10; drop"
alias "drop_he" "slot6; drop"


// Buymenu method as HOLD
alias "+buymenu" "buymenu"
alias "-buymenu" "buymenu"


// Fast weapon switch after AWP shot
alias "+lastinv" "slot3"
alias "-lastinv" "slot1; nade_mode_false"


// Message to everyone
alias "+chat" "bind ENTER messagemode"
