// ============================ NADE MODE ===============================

alias "primary_weapon" "slot1; nade_mode_false"
alias "secondary_weapon" "slot2; nade_mode_false"
alias "knife" "slot3; nade_mode_false; +lookatweapon; -lookatweapon"
alias "zeus" "slot11; nade_mode_false"
alias "bomb" "slot5; nade_mode_false"
alias "he_grenade" "slot6; nade_mode_true"
alias "flashbang" "slot7; nade_mode_true"
alias "smoke" "slot8; nade_mode_true"
alias "decoy" "slot9; nade_mode_true"
alias "molotov" "slot10; nade_mode_true"

alias "nade_mode_true" "bind MOUSE1 +mouse1_nade_mode; bind MOUSE2 +mouse2_nade_mode; alias -mouse1_nade_mode -attack; alias -mouse2_nade_mode -attack2"
alias "+mouse1_nade_mode" "+attack; keys_to_nade_mode; alias -mouse1_nade_mode mouse1_nade_mode_false"
alias "+mouse2_nade_mode" "+attack2; keys_to_nade_mode; alias -mouse2_nade_mode mouse2_nade_mode_false"

alias "keys_to_nade_mode" "bind SCANCODE44 jump-throw; bind SCANCODE8 +forward-jump-throw; bind SCANCODE21 throwaction; bind SCANCODE23 +forward-throw; getpos"

alias "mouse1_nade_mode_false" "-attack; nade_mode_false"
alias "mouse2_nade_mode_false" "-attack2; nade_mode_false"

alias "nade_mode_false" "keys_to_default; mouse_to_defaut"
alias "keys_to_default" "all_keys_to_default"
alias "all_keys_to_default" "bind SCANCODE44 +duck-jump; bind SCANCODE8 +use; bind SCANCODE21 +reload; bind SCANCODE23 +spray_menu"
alias "mouse_to_defaut" "bind MOUSE1 +attack; bind MOUSE2 +attack2"


// THROW action
alias "throwaction" "-attack;-attack2"


// JUMP-THROW action 
alias "jump-throw" "+jump;-jump; throwaction"


// FORWARD-THROW action
alias "+forward-throw" "+forward; throwaction; ft_bug_fix"
alias "-forward-throw" "-forward; bind SCANCODE23 +spray_menu"

alias "ft_bug_fix" "alias keys_to_default exept_ft_key"
alias "exept_ft_key" "bind SCANCODE44 +duck-jump; bind SCANCODE8 +use; bind SCANCODE21 +reload; alias keys_to_default all_keys_to_default"


// FORWARD-JUMP-THROW action
alias "+forward-jump-throw" "+forward;+jump; throwaction; fjt_bug_fix"
alias "-forward-jump-throw" "-forward;-jump; bind SCANCODE8 +use"

alias "fjt_bug_fix" "alias keys_to_default exept_fjt_key"
alias "exept_fjt_key" "bind SCANCODE44 +duck-jump; bind SCANCODE21 +reload; bind SCANCODE23 +spray_menu; alias keys_to_default all_keys_to_default"


// DUCK-JUMP action
alias "+duck-jump" "-jump;-duck;+jump;+duck"
alias "-duck-jump" "-jump;-duck"
bind "SPACE" "+duck-jump"





